{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Quick Explorer",
  "version": "0.1.8",
  "identifier": "com.nico.d-speedexplorer",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Quick Explorer",
        "width": 1370,
        "height": 800,
        "minWidth": 1370,
        "minHeight": 600,
        "maximized": false,
        "decorations": false,
        "transparent": false,
        "shadow": true,
        "visible": false,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": "default-src 'self' 'unsafe-inline' 'unsafe-eval'; img-src 'self' asset: https://asset.localhost http://asset.localhost https://* http://* data: blob: filesystem:;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "icons/32x32.png"
    ]
  }
}